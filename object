#to add object behaviours
#we use 
#def walk(self):

class Dog:
    def __init__(self,name,age):
        self.name=name
        self.age = age
        
    def walk(self):
               return "I am walking"
    
    def bark(self):
               return "woof woof"
         
               
    def __str__(self):
     return f"I am {self.name} and am {self.age} years"

        
dog1=Dog("Rufus",3)
print(dog1)




